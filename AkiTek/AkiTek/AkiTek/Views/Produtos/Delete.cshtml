@model AkiTek.Models.Produtos

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar Produto</h2>
<br />
<h3>Aguarda confirmação para eliminar o produto</h3>
<br />
<div>
    <h4>Produto</h4>
    <hr />
    <div id="deleteProd" class="container">
        <div id="rowDelete" class="row"></div>
        <div class="col-sm-12 col-lg-3 d-flex align-items-stretch">
            <div class="col-sm-12 col-lg-3 d-flex align-items-stretch">
                <div class="card m-3" style="width: 18rem;">
                    <img class="card-img-top" src="@Model.Imagens.OrderBy(i => i.Ordem).First().Nome" alt="Card header image" height="200" style="object-fit:cover">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Nome</h5>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <hr />
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Apagar" class="btn btn-default" /> |
            @Html.ActionLink("Cancelar", "Index")
        </div>
    }
</div>
