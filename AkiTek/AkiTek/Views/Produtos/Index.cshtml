@model IEnumerable<AkiTek.Models.ProdutosViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Catálogo</h2>
@if (User.IsInRole("Gestor")) {
    <p>
        @Html.ActionLink("Adicionar Produto", "Create")
    </p>
}

<hr />

<div id="categories" class="container">
    <div id="rowCateg" class="row"></div>

    @foreach (var item in Model) {
        <div class="col-sm-12 col-lg-3 d-flex align-items-stretch">
            <div class="card m-3" style="width: 18rem;">
                <a href="/Produtos/Details/@item.ID">
                    <img class="card-img-top" src="@item.Imagem" alt="Card header image" height="200" style="object-fit:cover">
                </a>
                <div class="card-body">
                    <h5 class="card-title">@item.NomeProduto</h5>
                    @if (item.Stock > 0) {
                        <span style="color:green; text-align:center; display:block">Disponível</span>
                    }
                    else {
                        <span style="color:red; text-align:center; display:block">Esgotado</span>
                    }
                    <div class="d-flex" style="justify-content:space-around">
                        <span>@item.Preco€</span>
                        <a href="#" class="btn btn-danger btn-sm">Comprar</a>
                    </div>
                </div>
            </div>
            @if (User.IsInRole("Gestor")) {
                <p>
                    @Html.ActionLink("Editar", "Edit", new { id = item.ID })
                    @Html.ActionLink("Remover", "Delete", new { id = item.ID })
                </p>
            }
        </div>
        }
</div>