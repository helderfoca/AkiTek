@model AkiTek.Models.Order
@{
    ViewBag.Title = "Address And Payment";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"
        type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"
        type="text/javascript"></script>
@using (Html.BeginForm()) {

    <h2>Envio e Pagamento</h2>
    <br />
    <fieldset>
        <legend>Informação para envio</legend>
        @Html.EditorForModel()
    </fieldset>
    <hr />
    <fieldset>
        <legend>Pagamento</legend>
        <div class="editor-label">
            @Html.Label("Nome")
        </div>
        <div class="editor-field">
            @Html.TextBox("Nome")
        </div>
        <div class="editor-label">
            @Html.Label("Número do Cartão")
        </div>
        <div class="editor-field">
            @Html.TextBox("Número do Cartão")
        </div>
        <div class="editor-label">
            @Html.Label("Data de Validade")
        </div>
        <div class="editor-field">
            @Html.TextBox("Data de Validade")
        </div>
        <div class="editor-label">
            @Html.Label("CVC")
        </div>
        <div class="editor-field">
            @Html.TextBox("CVC")
        </div>
    </fieldset>
    <hr />
    <input class="btn" type="submit" value="Submit Order" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
