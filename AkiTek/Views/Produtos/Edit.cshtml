@model AkiTek.Models.Produtos

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Produto</h2>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <br />
    <h4>Detalhes do Produto</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Preco, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Preco, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Preco, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />
    <h4>Especificações do Produto</h4>
    <p>
        @Html.ActionLink("Adicionar", "Create", "DescricaoCaracteristicas", new { produtoFK = Model.ID }, new { target = "_blank" })
    </p>
    @Html.Partial("_EspecificacoesPartial", Model.ListaCaracteristicas, null)
    <hr />
    <br />
    <h4>Imagens do Produto</h4>
    <p>
        @Html.ActionLink("Adicionar", "Create", "Imagens", new { produtoFK = Model.ID }, new { target = "_blank" })
    </p>
    @Html.Partial("_ImagensPartial", Model.Imagens, null)
    <hr />
    <br />
    <h4>Equipamentos</h4>
    <p>
        @Html.ActionLink("Adicionar", "Create", "Equipamentos", new { produtoFK = Model.ID }, new { target = "_blank" })
    </p>
    @Html.Partial("_EquipamentosPartial", Model.ListaEquipamentos, null)
    <hr />

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Guardar" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar", "Index","Produtos",null,null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
