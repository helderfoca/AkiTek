@model IEnumerable<AkiTek.Models.Caracteristicas>

@{
    ViewBag.Title = "_CaracteristicasPartial";
}

<table class="table" onfocus="new function { Location.reload() }">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", "Caracteristicas", new { id = item.ID }, new { target = "_blank" }) |
                @Html.ActionLink("Remover", "Delete", "Caracteristicas", new { id = item.ID, }, new { target = "_blank" })
            </td>
        </tr>
    }

</table>
<script type="text/javascript">
    window.onload = init;
    function init() { window.onfocus = whenInFocus; window.onblur = function () { window.onfocus = whenInFocus; }; };
    function whenInFocus() { location.reload(); };
</script>