@model IEnumerable<AkiTek.Models.DescricaoCaracteristica>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Caracteristica.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Caracteristica.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", "DescricaoCaracteristicas", new { id = item.ID }, new { target = "_blank" }) |
                @Html.ActionLink("Remover", "Delete", "DescricaoCaracteristicas", new { id = item.ID, }, new { target = "_blank" })
            </td>
        </tr>
    }

</table>

<script type="text/javascript">
    window.onload = init;
    function init() { window.onfocus = whenInFocus; window.onblur = function () { window.onfocus = whenInFocus; }; };
    function whenInFocus() { location.reload(); };
</script>